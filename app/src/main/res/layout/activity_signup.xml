<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sig"
    tools:context="com.example.yash.dietadvisory.signup">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="    Email"
        android:ems="10"
        android:layout_centerVertical="true"
        android:background="@drawable/but"
        android:layout_alignStart="@+id/id_username"
        android:id="@+id/id_email" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:background="@drawable/but1"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/btn_signup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/id_pass"
        android:background="@drawable/but"
        android:text="    *********"
        android:layout_above="@+id/id_email"
        android:layout_alignStart="@+id/id_email"
        android:layout_marginBottom="17dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:background="@drawable/but"
        android:text="    Username"
        android:ems="10"
        android:id="@+id/id_username"
        android:layout_above="@+id/id_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <ImageView
        app:srcCompat="@drawable/uu"
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/but1"
        android:layout_marginTop="35dp"
        android:id="@+id/btn_signup"
        android:layout_below="@+id/id_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
